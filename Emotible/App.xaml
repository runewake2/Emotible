<Application
    x:Class="Emotible.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emotible"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <GridLength x:Key="TabRowHeight">80</GridLength>
                    <Thickness x:Key="FlyoutItemMargin">0,4</Thickness>
                </ResourceDictionary>

                <ResourceDictionary Source="Views/CustomStyleTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
