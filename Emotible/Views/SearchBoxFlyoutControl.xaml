<UserControl
    x:Class="Emotible.Views.SearchBoxFlyoutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emotible.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Height="80">

    <Grid x:Name="ContentPanel"
          Background="{ThemeResource TabRowButtonNormalBrush}"
          Padding="8,8,8,8">
        <TextBlock Text="Filter Emoji's by Name"
                   Foreground="{ThemeResource TabRowButtonTextBrush}"
                   HorizontalAlignment="Center"></TextBlock>
        
        <AutoSuggestBox
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            PlaceholderText="{Binding SuggestionText}"
            QueryIcon="Find">
            
        </AutoSuggestBox>
    </Grid>
</UserControl>
